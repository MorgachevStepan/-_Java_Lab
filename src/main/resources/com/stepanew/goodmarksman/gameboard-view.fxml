<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<BorderPane xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.stepanew.goodmarksman.GameBoardController">
   <bottom>
      <HBox
              prefHeight="100"
              alignment="CENTER_LEFT"
              spacing="20"
              styleClass="with-padding"
      >
         <Button
                 fx:id="readyButton"
                 layoutX="37.0"
                 layoutY="25.0"
                 mnemonicParsing="false"
                 onAction="#ready"
                 text="Ready"
         />
         <Button
                 fx:id="shootButton"
                 layoutX="225.0"
                 layoutY="24.0"
                 mnemonicParsing="false"
                 onAction="#shoot"
                 text="Shoot"
         />
         <Button
                 fx:id="pauseButton"
                 layoutX="134.0"
                 layoutY="25.0"
                 mnemonicParsing="false"
                 onAction="#pause"
                 text="Pause"
         />
      </HBox>
   </bottom>
   <!--<Polygon fill="DODGERBLUE" layoutX="64.0" layoutY="191.0" points="-50.0, 40.0, -25.800018310546875, -17.400009155273438, -50.0, -71.80000305175781" stroke="BLACK" strokeType="INSIDE" />-->
   <center>
      <Pane
           fx:id="gameBoard"
           layoutX="72.0"
           layoutY="20.0"
           prefHeight="310.0"
           prefWidth="395.0"
      />
   </center>
   <right>
      <VBox
              fx:id="infoBox"
              prefWidth="250.0"
              alignment="TOP_CENTER"
      />
   </right>
   <left>
      <VBox
              prefWidth="100"
              alignment="CENTER"
              fx:id="playersBox"
      />
   </left>
</BorderPane>
